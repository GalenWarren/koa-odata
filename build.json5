{
  main: "dist/common/sample/app.js",

  transpile: {

    sourceRoot: "src/",
    target: "dist/",
    modules: ["common"],

    babel: {

      moduleIds: false,
      comments: false,
      compact: false,
      stage:2,
      optional: [
          "es7.decorators",
          "es7.classProperties",
          "es7.asyncFunctions"
      ],
      blacklist: [
          "regenerator"
      ]

    }

  },

  debug: {
    build: true
  },

  doc: {
    name: "api.json"
  },

  test: {

    source: "test/**/*.spec.js",

    coverage: {
      thresholds: {
        global: 90
      }
    }

  }

}
